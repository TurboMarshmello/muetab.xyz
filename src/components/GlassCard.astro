---
/*
 * https://github.com/withastro/astro/blob/c7de971b10884ce788a1af98618a14d689576e1f/examples/basics/src/components/Card.astro
 */
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<div
  class="link-card group backdrop-brightness-75 backdrop-saturate-150 backdrop-blur-xl p-px rounded-lg bg-[length:400%]"
>
  <a href={href} class="py-2 px-4 rounded-lg bg-white/80 dark:bg-black/80">
    <h6 class="test-sm text-black dark:text-white group-hover:text-mue-pink dark:group-hover:text-mue-orange line-clamp-1">
      {title}
    </h6>
    <p class="text-xs text-black/50 dark:text-white/50 line-clamp-1">
      {body}
    </p>
  </a>
</div>
<style>
  :root {
    --accent: #dd3b67;
    --accent-light: #ffb032;
    --accent-dark: #b13854;
    --accent-gradient: linear-gradient(
      45deg,
      var(--accent),
      var(--accent-light) 30%,
      black 60%
    );
  }

  .link-card {
    display: flex;
    background-image: none;
    background-size: 400%;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    color: white;
    /* background-color: rgba(0, 0, 0, 0.8); */
    /* opacity: 0.8; */
  }
  h6 {
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  /* .link-card:is(:hover, :focus-within) h6 {
    color: var(--accent-light);
  } */
</style>
